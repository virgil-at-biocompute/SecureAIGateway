# SecureAIGateway Environment Configuration
# Copy this file to .env and customize the values
# ================================================

# ======================
# REQUIRED SETTINGS
# ======================

# Master API Key for admin authentication
# IMPORTANT: Change this to a strong, unique value in production!
LITELLM_MASTER_KEY=sk-your-secure-key-here

# PostgreSQL Database URL
# Default connects to the PostgreSQL container in docker-compose
DATABASE_URL=postgresql://llmproxy:dbpassword9090@db:5432/litellm

# Store model configurations in database (enables UI model management)
STORE_MODEL_IN_DB=True

# ======================
# AI PROVIDER API KEYS
# ======================
# Add API keys for the providers you want to use

# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic (Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# Azure OpenAI
# AZURE_API_KEY=
# AZURE_API_BASE=https://your-resource.openai.azure.com/
# AZURE_API_VERSION=2024-02-15-preview

# Google AI (Gemini)
# GOOGLE_API_KEY=

# AWS Bedrock
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION_NAME=us-east-1

# Cohere
# COHERE_API_KEY=

# ======================
# OPTIONAL SETTINGS
# ======================

# Email/SMTP Configuration (for alerts and notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_SENDER_EMAIL=noreply@example.com

# Redis (for distributed caching - optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging Level (DEBUG, INFO, WARNING, ERROR)
# LITELLM_LOG=INFO

# ======================
# PRODUCTION SETTINGS
# ======================

# Disable detailed error messages in production
# LITELLM_DROP_PARAMS=True

# Rate limiting
# LITELLM_GLOBAL_MAX_PARALLEL_REQUESTS=100
